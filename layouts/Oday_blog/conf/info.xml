<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">Oday 레이아웃- 블로그</title>
    <title xml:lang="en">Oday 레이아웃- 블로그</title>
    <description xml:lang="ko">오렌지데이 커뮤니티용 레이아웃</description>
    <description xml:lang="en">오렌지데이 커뮤니티용 레이아웃</description>
    <version>1.0</version>
    <date>2023</date>
    <author email_address="yabssabi@gmail.com" link="https://www.orangeday.com">
        <name xml:lang="ko">Yabi 夜飛</name>
        <name xml:lang="en">Yabi 夜飛</name>
    </author>
    <menus>
        <menu name="GNB" maxdepth="2" default="true">
            <title xml:lang="ko">전역 네비게이션 바</title>
            <title xml:lang="en">Global Navigation Bar</title>
        </menu>
        <menu name="LNB" maxdepth="2" default="true">
            <title xml:lang="ko">LNB</title>
            <title xml:lang="en">LNB</title>
        </menu>
    </menus>
	<extra_vars>
		<group>
			<title xml:lang="ko">레이아웃</title>
			<var name="gnb_width" type="text" default="180">
				<title xml:lang="ko">메뉴바 크기</title>
				<description xml:lang="ko">메뉴바 크기를 정할수 있습니다.(디폴트 : 180px)</description>
			</var>
			<var name="site_bottom_meta" type="select">
				<title xml:lang="ko">서명 사용</title>
				<description xml:lang="ko">로그인 사용자 보이기</description>
				<options value="yes">
					<title xml:lang="ko">사용</title>
				</options>
				<options value="no">
					<title xml:lang="ko">사용안함</title>
				</options>
			</var>
		</group>
		<group>
			<title xml:lang="ko">헤드</title>
			<var name="site_birthday" type="text">
				<title xml:lang="ko">사이트 시작일</title>
			</var>
			<var name="site_title_lang" type="radio">
				<title xml:lang="ko">사이트명 한/영</title>
				<description xml:lang="ko">한,영 혼합일 경우 국문으로 체크해 주세요.</description>
				<options value="eng">
					<title xml:lang="ko">영문</title>
				</options>
				<options value="kor">
					<title xml:lang="ko">국문</title>
				</options>
			</var>			
			<var name="site_title1" type="text">
				<title xml:lang="ko">사이트명 상</title>
			</var>
			<var name="site_title2" type="text">
				<title xml:lang="ko">사이트명 하</title>
				<description xml:lang="ko">사이트명이 길면 상하로 나누어서 입력할 수 있습니다.</description>
			</var>
		</group>
		<group>
			<title xml:lang="ko">푸터</title>
			<var name="site_address" type="text">
				<title xml:lang="ko">주소</title>
			</var>
			<var name="site_copyright" type="text">
				<title xml:lang="ko">카피라이트 주체</title>
				<description xml:lang="ko">(C) 2023. '---' all rights reserved.</description>
			</var>
		</group>
		<group>
			<title xml:lang="ko">외부 옵션</title>
			<var name="googleSearch" type="text">
				<title xml:lang="ko">구글 검색 사용</title>
				<description xml:lang="ko">계정 주소 전체를 넣어주세요.
				ex) https://cse.google.com/cse.js?cx=*****************</description>
			</var>
		</group>
	</extra_vars>
</layout>
